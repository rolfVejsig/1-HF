@page
@model Plukliste_for_web.Pages.Clients.EditModel
@{
}

<br />
<h2>Rediger Plukliste</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <input type="hidden" name="ID" value="Model.clientinfo.ID"></input>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Antal</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="antal" value="@Model.clientInfo.Antal" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Type</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="type" value="@Model.clientInfo.Type" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Produktnr</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="Produktnr" value="@Model.clientInfo.Produktnr" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Navn</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="navn" value="@Model.clientInfo.Navn" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="name" value="@Model.clientInfo.Name" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Forsendelse</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="Forsendelse" value="@Model.clientInfo.Forsendelse" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Indsend</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Afbryd</a>
        </div>
    </div>
</form>